# =========================
# MailBridge Configuration
# =========================

# Default mailer to use: smtp, sendgrid, mailgun, ses, postmark, brevo
MAIL_MAILER=smtp

# -------------------------
# SMTP Configuration
# -------------------------
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_USERNAME=your_smtp_username
MAIL_PASSWORD=your_smtp_password
MAIL_TLS_ENCRYPTION=True  # True = TLS, False = None
MAIL_SSL_ENCRYPTION=True  # True = SSL, False = None

# -------------------------
# SendGrid Configuration
# -------------------------
MAIL_API_KEY=your_sendgrid_api_key
MAIL_ENDPOINT=https://api.sendgrid.com/v3/mail/send

# -------------------------
# Mailgun Configuration
# -------------------------
MAILGUN_API_KEY=your_mailgun_api_key
MAILGUN_ENDPOINT=https://api.mailgun.net/v3/YOUR_DOMAIN/messages

# -------------------------
# Amazon SES Configuration
# -------------------------
MAIL_AWS_ACCESS_KEY_ID=your_aws_access_key
MAIL_AWS_SECRET_ACCESS_KEY=your_aws_secret_key
MAIL_AWS_REGION=us-east-1

# -------------------------
# Postmark Configuration
# -------------------------
POSTMARK_SERVER_TOKEN=your_postmark_server_token
POSTMARK_ENDPOINT=https://api.postmarkapp.com/email

# -------------------------
# Brevo (Sendinblue) Configuration
# -------------------------
BREVO_API_KEY=your_brevo_api_key
BREVO_ENDPOINT=https://api.brevo.com/v3/smtp/email
